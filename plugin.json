{
  "$schema": "./node_modules/midi-mixer-plugin/plugin.schema.json",
  "id": "ca.jaggernaut.midi-mixer.PTT",
  "name": "Push-To-Talk",
  "type": "node",
  "version": "1.2.0",
  "author": "Jaggernaut",
  "main": "lib/index.js",
  "settings": {
    "keycode": {
      "label": "Keycode list. Re-activate plugin to update",
      "type": "text",
      "fallback": "17(ctrl)"
    },
    "wheelkeycodes": {
      "label": "Wheel keycode list. Re-activate plugin to update",
      "type": "text",
      "fallback": "~37(left)[~40(down)]/~39(right)[~38(up)]"
    },
    "XinputEnable": {
      "label": "Enable Xinput controller",
      "type": "toggle",
      "fallback": false
    },
    "mouseInputEnable": {
      "label": "Enable mouse control",
      "type": "toggle",
      "fallback": false
    },
    "mouseInputRelative": {
      "label": "Mouse Movement based on turn speed",
      "type": "toggle",
      "fallback": false
    }
  }
}